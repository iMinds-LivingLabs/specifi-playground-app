<Alloy>
    <TableViewRow id="row" class="challengeTableViewRow">
        <View id="rowWrapper">
            <View id="leftSide">
                <Label id="leftIcon" autoStyle="true"/>
            </View>
            <View id="infoWrapper">
                <Label id="titleLabel"/>
                <Label id="typeLabel"/>
                <Label id="distanceLabel"/>
                <Label id="completedCounterLabel"/>
            </View>
            <View id="rightSide">
            	<Label id="rightIcon" icon="fa-dot-circle-o" />
            	<Label id="tokenLabel"/>
            </View>
        </View>
        <Widget id="fa" src="com.mattmcfarland.fontawesome"/>
    </TableViewRow>
</Alloy>
