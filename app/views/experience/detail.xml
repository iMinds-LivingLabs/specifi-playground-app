<Alloy>
    <View id="detailWrapper">
        <View id="experienceDetailWrapperOuter">
            <View id="titleWrapper" >
                <Label id="experienceTitle"/>
            </View>
            <ScrollView id="experienceDetailWrapper">
                <ImageView id="experienceImage" onClick="imageClick"></ImageView>
            	<View class="row innerInfo">
            		<View class='column'>
            			<Require autoStyle="true" type="view" src="ui/extendedbutton" class ="ticketBulkButton" id="btnSubstractFromBuy" onClick="onClick"/>
        			</View>
					<View class='column'>
						<Label id="bulkNumber">0</Label>
					</View>
					<View class='column'>
						<Require autoStyle="true" type="view" src="ui/extendedbutton" class ="ticketBulkButton" id="btnAddToBuy" onClick="onClick"/>
					</View>
				</View>
				
            	<View class="row innerInfo">
            		<Label class="detailIcon" icon = "fa-calendar"/>
            		<View class="detailTextWrapper">
                    	<Label class="detailText" id="scheduleText"/>
                    </View>
                </View>
                <View class="row innerInfo">
            		<Label class="detailIcon" icon = "fa-location-arrow"/>
            		<View class="detailTextWrapper">
                    	<Label class="detailText" id="distanceLabel"/>
                	</View>
                </View>
                <View class="row innerInfo">
            		<Label class="detailIcon" icon = "fa-dot-circle-o"/>
            		<View class="detailTextWrapper">
                    	<Label class="detailText" id="tokensNumber"/>
                    </View>
                </View>
                <View class="row innerInfo">
            		<Label class="detailIcon" icon = "fa-ticket"/>
            		<View class="detailTextWrapper">
                    	<Label class="detailText" id="ticketsAvailable"/>
                    </View>
                </View>
                <View class="row innerInfo">
            		<Label class="detailIcon" icon = "fa-ticket"/>
            		<View class="detailTextWrapper">
                    	<Label class="detailText" id="yourTickets"/>
                	</View>
                </View>
                <Label id="about" class="innerInfo"></Label>
                <Label id="description" class="innerInfo"/>
            </ScrollView>
        </View>
        <View id="footerWrapper">
			<View id="innerFooterWrapper">
        		<Require autoStyle="true" type="view" class ="footerButton" src="ui/extendedbutton" id="btnBuy" onClick="onClick"/>
        	</View>
		</View>
        <Widget id="fa" src="com.mattmcfarland.fontawesome"/>
    </View>
</Alloy>
