<Alloy>
	<View class="registerWrapper">
		<ScrollView class="scrollWrapper">
			<ImageView id="image" image="/images/ui/person_ph.png" />
			<View class="labelWrapper">
				<Label class="registerHintLabel" id="registerHint" textid="LabelPhotoText"/>
			</View>
		</ScrollView>
		<View id="footerWrapper">
			<View class="registerInnerFooterWrapper">
				<Require type="view" src="ui/extendedbutton" class="registerButton" id="btnPhoto" onClick="onClick"/>
				<Require type="view" src="ui/extendedbutton" class="registerButton" id="btnSave" onClick="onClick"/>
				<Require type="view" src="ui/extendedbutton" class="registerButton" id="btnRegisterCancel" onClick="onClick"/>
			</View>
		</View>
	</View>
</Alloy>