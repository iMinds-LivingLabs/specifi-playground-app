<Alloy>
	<View id="registerPassword">
		<View id="registerPasswordWrapper">
				<View class="textFieldWrapper">
					<TextField class="TfRegister" id="TfPass" onChange = "onTfTopChange"/>
				</View>
				<View class="textFieldWrapper" id="TfWRepeatPass">
					<TextField class="TfRegister" id="TfRepeatPass" onChange = "onTfTopChange"/>
				</View>
			<Require type="view" src="ui/extendedbutton" class="registerButton" id="BtnNext" onClick="onClick"/>
			<Require type="view" src="ui/extendedbutton" class="registerButton" id="BtnCancel" onClick="onClick"/>
		</View>
	</View>
</Alloy>