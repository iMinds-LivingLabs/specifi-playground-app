<Alloy>
	<TableViewRow id="row">
		<View id="rowWrapper">
			<View id="backgroundWrapper">
				<ImageView id="expImageThumb"></ImageView>
				<View id="imageMask" class="backgroundLayer"></View>
			</View>
			<View id="leftSideWrapper">
				<Label id="title"></Label>
				<Label id="offeredBy"></Label>
				<View id="bottomTextFooter">
					<View id="scheduleWrapper" class="footerRow">
						<Label id="scheduleIcon" class="footerRowIcon" icon="fa-calendar"></Label>
						<Label id="scheduleText" class="footerRowText"></Label>
					</View>>
					<View id="ticketsWrapper" class="footerRow">
						<Label id="ticketsIcon" class="footerRowIcon" icon="fa-ticket"></Label>
						<Label id="ticketsText" class="footerRowText"></Label>
					</View>
				</View>
			</View>
		</View>
		<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
	</TableViewRow>
</Alloy>
