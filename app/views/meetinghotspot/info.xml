<Alloy>
    <View id="detailWrapper">
        <View id="challengeDetailWrapperOuter">
            <View id="titleWrapper" >
                <View  id="titleWrapperInner">
                	<Label autoStyle="true" id="challengeTitle"/>
            	</View>
            </View>
            <ScrollView id="challengeDetailWrapper">
            	<View class="circlesWrapper">
            		<View id="leftWrapper" class="halfWrapper">
            			<View id="playersOnRouteWrapper">
	                		<Label id="onRouteNumber"></Label>
	                		<Label id="onRouteMessage"></Label>
		               	</View>
        			</View>
        			<View id="rightWrapper" class="halfWrapper">
        				<View id="timeRemainingWrapper">
        					<Label id="timeRemainingText"/>
		               		<Require autoStyle="true" type="view" src="ui/countdown" id="timeRemainingCountDown"/>
		               		
		                </View>
        			</View>
                </View>
                <View class="centerWrapper innerInfo">
                	<Label id="about"></Label>
	                <Label id="description"/>
	                <View id="challengeTypeWrapper" class="row">
						<Label class="detailIcon" icon = "fa-map-marker"></Label>
						<Label class="detailText" id="challengeType"/>
					</View>
					<View class="row">
						<Label class="detailIcon" icon = "fa-location-arrow"></Label>
							<Label class="detailText" id="distanceLabel"/>
					</View>
					<View class="row">
						<Label class="detailIcon" icon = "fa-clock-o"></Label>
						<Label class="detailText" id="activeMessage"/>
					</View>
            	</View>
            </ScrollView>
        </View>
        <View id="footerWrapper">
            <View id="innerFooterWrapper">
                <Require autoStyle="true" type="view" src="ui/extendedbutton" class ="footerButton" id="btnDetails" onClick="onClick"/>
                <Require autoStyle="true" type="view" src="ui/extendedbutton" id="btnPlayHotspot" onClick="onClick"/>
                <Require autoStyle="true" type="view" src="ui/extendedbutton" class ="footerButton" id="btnMap" onClick="onClick"/>
            </View>
        </View>
        <Widget id="fa" src="com.mattmcfarland.fontawesome"/>
    </View>
</Alloy>
