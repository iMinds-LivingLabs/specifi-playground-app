	height: Ti.UI.SIZE,
	layout: "horizontal",
	width: Ti.UI.SIZE
},

"#tokensNumber":{
	font: {
		fontSize: "28dp",
		fontWeight: "bold"
	},
	height: Ti.UI.SIZE
},

"#tokensText":{
	text: L('tokens_won'),
	font: {
		fontSize: "14dp",
		fontWeight: "bold"
	},
	bottom: "10dp",
	height: Ti.UI.SIZE
},

".infoAndIcon":{
	top: "3dp"
},

"#btnScan":{
	width: "20%"
},

".centerWrapper": {
	layout: 'vertical',
	width: Titanium.UI.FILL,
	height: Titanium.UI.SIZE,
