"#experienceDetailWrapperOuter":{
    top: "0dp",
    bottom:Alloy.Globals.appConfig.headerHeight,
    height: Titanium.UI.FILL,
    layout: "vertical",
    backgroundColor: "white",
    backgroundImage: "/images/background-arrow.png"
},
"#experienceTitle":{
	textAlign: Titanium.UI.TEXT_ALIGNMENT_CENTER,
	top: "8dp",
	font: {
		fontSize: "18dp"
	},
	bottom: "8dp",
	height: Ti.UI.SIZE,
	left: "8dp",
	right: "8dp",
	color: "white"
},
"#experienceDetailWrapper":{
	top: "0dp",
    heigth: Ti.UI.FILL,
    width: Ti.UI.FILL,
    showVerticalScrollIndicator: true,
    layout: "vertical",
    contentWidth: "99%",
    disableBounce: false
},
".row":{
    height: Ti.UI.SIZE,
    layout: 'horizontal'
},
"#about":{
    top: "15dp",
	font:{
		fontSize: "18dp"
	},
	color: Alloy.Globals.CustomColor7
},
"#description":{
