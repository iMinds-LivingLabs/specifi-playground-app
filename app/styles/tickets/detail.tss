	height: "25dp",
	iconWidth:"25dp",
	iconHeight: "25dp",
	height: Titanium.UI.FILL
},


"#btnAddToUse":{
	iconImage: "/images/icons/plus.png"
},

"#btnSubstractFromUse":{
